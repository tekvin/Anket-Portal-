                            i++;



                        });
                        var yuzde = 0;
                        var total = b + t;
                        if (t > 0 && total > 0) {
                            yuzde = Math.round(100 * (t / total));

                        }

                        var progress = '<div class="progress" role="progressbar" aria-label="Example with label" aria-valuenow="' + yuzde + '" aria-valuemin="0" aria-valuemax="100" style="height:50px"><div class="progress-bar" style = "width: ' + yuzde + '%"></div></div><h3> % ' + yuzde + ' </h3>';
                        $("#progress").html(progress);
                    },
                    error: function (e) {
                        console.log(e);
                    },
                });

            }


            $("#btnKaydet").click(function () {

                var title = $("#txtTitle").val();
                var status = $("#cbStatus").val();
                var id = $("#txtId").val();

                if (title == "" || title == null) {
                    $("#sonuc")
                        .removeClass()
                        .addClass("alert alert-danger")
                        .html("Başlık Giriniz!");
                    return false;
                }

                $.ajax({
                    url: "/Anket/AnketAddEditAjax",
                    type: "POST",
                    data: { id: id, title: title, status: status },
                    success: function (data) {
                        if (data.status) {
                            $("#sonuc")
                                .removeClass()
                                .addClass("alert alert-success")
                                .html(data.message);
                            LoadTodos();
                        } else {
                            $("#sonuc")
                                .removeClass()
                                .addClass("alert alert-danger")
                                .html(data.message);
                        }
                    },
                    error: function (e) { }
                });



            });

            $(document).on("click", ".edit", function () {
                var id = $(this).closest("tr").attr("id");
                $("#baslik").html("Kayıt Düzenle");
                $("#btnVazgec").show();
                $("#btnSil").show();
                $.ajax({
                    url: "/anket/AnketByIdAjax",
                    type: "Get",
                    data: { id: id },
                    success: function (data) {
                        $("#txtTitle").val(data.title);
                        $("#txtId").val(data.id);
                        $("#cbStatus").val(data.status);
                    },
                    error: function () { }
                });
            });


            $("#btnVazgec").click(function () {
                LoadAnkets();
            });
            $("#btnSil").click(function () {
                var id = $("#txtId").val();
                $.ajax({
                    url: "/anket/AnketRemoveAjax",
                    type: "Get",
                    data: { id: id },
                    success: function (data) {
                        if (data.status) {
                            $("#sonuc")
                                .removeClass()
                                .addClass("alert alert-success")
                                .html(data.message);
                            LoadTodos();
                        } else {
                            $("#sonuc")
                                .removeClass()
                                .addClass("alert alert-danger")
                                .html(data.message);
                        }

                    },
                    error: function () { }
                });
            });





        });

    </script>
}